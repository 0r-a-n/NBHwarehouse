<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kitInformation_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/kitImg"
                android:layout_width="350dp"
                android:layout_height="230dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/electric_mixer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/TVkitName"
                android:layout_width="300dp"
                android:layout_height="38dp"
                android:layout_marginTop="16dp"
                android:text="جهاز سير"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@+id/kitImg"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toStartOf="@+id/kitImg"
                app:layout_constraintTop_toBottomOf="@+id/kitImg" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginTop="16dp"
                android:text="الفئة:"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/TVkitName"
                app:layout_constraintTop_toBottomOf="@+id/TVkitName" />

            <TextView
                android:id="@+id/TVkitType"
                android:layout_width="153dp"
                android:layout_height="25dp"
                android:text="رياضة"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView19"
                app:layout_constraintEnd_toStartOf="@+id/textView19"
                app:layout_constraintTop_toTopOf="@+id/textView19"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="86dp"
                android:layout_height="25dp"
                android:layout_marginTop="16dp"
                android:text="الوصف:"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/textView19"
                app:layout_constraintTop_toBottomOf="@+id/textView19" />

            <TextView
                android:id="@+id/TVkitDescription"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف "
                app:layout_constraintEnd_toEndOf="@+id/textView21"
                app:layout_constraintStart_toStartOf="@+id/TVkitName"
                app:layout_constraintTop_toBottomOf="@+id/textView21" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="24dp"
                android:text="السعر:"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/TVkitDescription"
                app:layout_constraintHorizontal_bias="0.665"
                app:layout_constraintStart_toStartOf="@+id/TVkitDescription"
                app:layout_constraintTop_toBottomOf="@+id/TVkitDescription" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:text="/ ساعة"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/TVkitPrice"
                app:layout_constraintEnd_toStartOf="@+id/TVkitPrice"
                app:layout_constraintTop_toTopOf="@+id/TVkitPrice"
                app:layout_constraintVertical_bias="0.4" />

            <TextView
                android:id="@+id/TVkitPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="55"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView23"
                app:layout_constraintEnd_toStartOf="@+id/textView23"
                app:layout_constraintTop_toTopOf="@+id/textView23"
                app:layout_constraintVertical_bias="0.285" />

            <Button
                android:id="@+id/btnRentNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="قم بالاستئجار الآن"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.541"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView23"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>




</RelativeLayout>